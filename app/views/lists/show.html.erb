<h1><%= @list.name %></h1>
<br>

<% @bookmarks.each do |bookmark| %>
  <img src='bookmark.movie.poster_url' alt="Movie Poster">
  <h3><%= bookmark.movie.title %></h3>
  <p><%= bookmark.movie.overview %></p>
  <p><em><%= bookmark.comment %></em></p>
  <p><%= bookmark.movie.rating %></p>
<% end %>

<%= link_to "Add movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
<%= link_to "Back to all", lists_path, class: "btn btn-primary" %>
